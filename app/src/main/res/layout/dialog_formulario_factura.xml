<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Paciente -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paciente *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Mar칤a Gonz치lez"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName" />

        <!-- Tipo de Servicio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Servicio *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_tipo_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Especialidad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidad *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_especialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Subtotal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal ($) *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_subtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 50000"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="numberDecimal" />

        <!-- Descuento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descuento ($)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_descuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 10000"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="numberDecimal" />

        <!-- C칩digo de Cobertura -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C칩digo de Cobertura"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_codigo_cobertura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: EPS-SURA-2024"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Nota sobre campos obligatorios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Campos obligatorios\n\n游눠 El IVA (19%) se calcular치 autom치ticamente"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView> 