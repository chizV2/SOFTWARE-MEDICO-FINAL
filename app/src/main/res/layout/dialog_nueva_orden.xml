<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título del diálogo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 Nueva Orden Médica"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Paciente -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👤 Paciente:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_paciente_orden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre completo del paciente"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Examen/Estudio -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 Examen/Estudio:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_examen_orden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del examen o estudio"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Indicaciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📝 Indicaciones:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_indicaciones_orden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Instrucciones para el paciente"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Prioridad -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚨 Prioridad:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spinner_prioridad_orden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <!-- Información adicional -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 La orden será registrada en el sistema y notificada al paciente."
        android:textSize="12sp"
        android:textColor="@color/colorTextSecondary"
        android:background="@drawable/info_background"
        android:padding="8dp" />

</LinearLayout> 