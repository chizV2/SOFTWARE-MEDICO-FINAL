<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- T칤tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游닏 Nuevo Mensaje"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Tipo de mensaje -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Mensaje"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_tipo_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Destinatario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destinatario *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_destinatario_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Dr. Carlos Rodr칤guez, Personal Administrativo"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Asunto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asunto *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_asunto_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Cambio de horario, Informaci칩n importante"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Contenido -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenido *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_contenido_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escriba el contenido del mensaje..."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="6" />

        <!-- Prioridad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prioridad"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_prioridad_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Informaci칩n sobre el mensaje -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游눠 El mensaje se enviar치 al destinatario y quedar치 registrado en el sistema. Los mensajes cr칤ticos se notificar치n inmediatamente."
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:background="@drawable/info_background"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView> 