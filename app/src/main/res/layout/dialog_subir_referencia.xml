<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título del diálogo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📤 Subir Referencia Externa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Paciente -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👤 Paciente:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_paciente_referencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre completo del paciente"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Especialidad -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🏥 Especialidad:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_especialidad_referencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Especialidad médica (ej: Cardiología)"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Médico Referente -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👨‍⚕️ Médico Referente:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_medico_referente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del médico referente"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Motivo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 Motivo de la Referencia:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_motivo_referencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Motivo de la derivación"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Observaciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📝 Observaciones:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_observaciones_referencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observaciones adicionales"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Prioridad -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚨 Prioridad:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spinner_prioridad_referencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Información adicional -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 La referencia será registrada en el sistema y notificada al médico correspondiente. Se puede adjuntar documentación adicional."
        android:textSize="12sp"
        android:textColor="@color/colorTextSecondary"
        android:background="@drawable/info_background"
        android:padding="8dp" />

</LinearLayout> 