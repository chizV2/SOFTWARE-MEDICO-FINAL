<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header con tÃ­tulo y botones principales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… GestiÃ³n de Citas MÃ©dicas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Botones principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_agenda_calendario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“… Agenda"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/button_citas_hoy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“‹ Hoy"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_volver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”™ Volver"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="12dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Filtros y estadÃ­sticas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/lightGray">

        <TextView
            android:id="@+id/text_view_resumen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“Š Citas: 0 | Hoy: 0 | Pendientes: 0"
            android:textSize="14sp"
            android:textColor="@color/colorTextPrimary"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spinner_filtro_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Contenedor de citas con ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/linear_layout_citas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Mensaje cuando no hay citas -->
    <TextView
        android:id="@+id/text_view_sin_citas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“­ No hay citas programadas"
        android:textSize="18sp"
        android:textColor="@color/colorTextSecondary"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout> 