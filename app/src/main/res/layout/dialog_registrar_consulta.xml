<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Consulta Médica"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Campo Paciente -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paciente:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_paciente_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccionar paciente"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:focusable="false"
        android:clickable="true" />

    <!-- Campo Motivo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivo de Consulta:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_motivo_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describir motivo de la consulta"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Campo Síntomas -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Síntomas:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_sintomas_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describir síntomas principales"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Campo Evolución -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evolución:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_evolucion_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Evolución del paciente"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Campo Observaciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Observaciones:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_observaciones_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observaciones adicionales"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Campo Diagnóstico -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diagnóstico:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_diagnostico_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diagnóstico médico"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Campo Tratamiento -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tratamiento:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_tratamiento_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tratamiento prescrito"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Campo Plan de Seguimiento -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plan de Seguimiento:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_plan_seguimiento_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plan de seguimiento y controles"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textSize="16sp"
            android:background="@drawable/button_cerrar_sesion_background"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
