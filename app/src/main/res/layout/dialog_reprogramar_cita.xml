<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona la nueva fecha y hora para tu cita:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="16dp" />

    <!-- Nueva Fecha -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📅 Nueva Fecha"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_nueva_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecciona la nueva fecha"
        android:inputType="none"
        android:focusable="false"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Nueva Hora -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🕐 Nueva Hora"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_nueva_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecciona la nueva hora"
        android:inputType="none"
        android:focusable="false"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

</LinearLayout> 