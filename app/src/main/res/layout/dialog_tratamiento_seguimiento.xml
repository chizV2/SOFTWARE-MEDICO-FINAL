<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título del diálogo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💊 Tratamiento y Seguimiento"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Medicamentos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💊 Medicamentos:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_medicamentos_tratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de los medicamentos"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Dosis -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📏 Dosis:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_dosis_tratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosis de cada medicamento"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Frecuencia -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⏰ Frecuencia:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_frecuencia_tratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Frecuencia de administración"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Duración -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📅 Duración:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_duracion_tratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duración del tratamiento"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Indicaciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 Indicaciones:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_indicaciones_tratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Indicaciones especiales para el paciente"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Plan de Seguimiento -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📊 Plan de Seguimiento:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_plan_seguimiento_tratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plan de seguimiento y control"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Próxima Cita -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📅 Próxima Cita:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_proxima_cita_tratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de la próxima cita de control"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Información adicional -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 El tratamiento será registrado en el expediente del paciente y se programará automáticamente la próxima cita de seguimiento."
        android:textSize="12sp"
        android:textColor="@color/colorTextSecondary"
        android:background="@drawable/info_background"
        android:padding="8dp" />

</LinearLayout>
