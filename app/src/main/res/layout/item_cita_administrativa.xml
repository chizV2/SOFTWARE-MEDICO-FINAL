<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/edit_text_background"
    android:padding="20dp"
    android:layout_marginBottom="16dp"
    android:elevation="4dp"
    android:layout_marginHorizontal="8dp">

    <!-- Encabezado de la cita -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📅 Cita Médica"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/text_view_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏳ Pendiente"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@drawable/button_background"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Información de la cita -->
    <TextView
        android:id="@+id/text_view_info_cita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información de la cita"
        android:textSize="15sp"
        android:textColor="@color/colorTextPrimary"
        android:lineSpacingExtra="6dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/info_background"
        android:padding="12dp" />

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextSecondary"
        android:alpha="0.3"
        android:layout_marginBottom="16dp" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Botón Ver Detalles -->
        <Button
            android:id="@+id/button_ver_detalles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👁️ Ver Detalles"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginEnd="6dp" />

        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/button_confirmar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="✅ Confirmar"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginHorizontal="6dp"
            android:visibility="visible" />

        <!-- Botón Reprogramar -->
        <Button
            android:id="@+id/button_reprogramar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔄 Reprogramar"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginHorizontal="6dp"
            android:visibility="visible" />

        <!-- Botón Cancelar -->
        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="❌ Cancelar"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_cerrar_sesion_background"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginStart="6dp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout> 