<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/edit_text_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <!-- Nombre del paciente -->
    <TextView
        android:id="@+id/text_view_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Paciente"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Información del paciente -->
    <TextView
        android:id="@+id/text_view_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información del paciente"
        android:textSize="14sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Estado de validación -->
    <TextView
        android:id="@+id/text_view_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado: Pendiente"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Botón Editar -->
        <Button
            android:id="@+id/button_editar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="✏️ Editar"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_marginEnd="4dp" />

        <!-- Botón Documentos -->
        <Button
            android:id="@+id/button_documentos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📄 Docs"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp" />

        <!-- Botón Eliminar -->
        <Button
            android:id="@+id/button_eliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🗑️ Eliminar"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</LinearLayout> 