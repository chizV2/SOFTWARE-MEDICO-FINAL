<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/text_view_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Panel de Funcionalidades Médicas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:padding="24dp" />

    <!-- Mensaje de bienvenida -->
    <TextView
        android:id="@+id/text_view_bienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido Dr. [Nombre]\n\nSeleccione la funcionalidad que desea utilizar:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:background="@drawable/info_background"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp" />

    <!-- Botones de funcionalidades -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- SECCIÓN: GESTIÓN DE PACIENTES -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Pacientes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="8dp" />

        <!-- Primera fila - Gestión de citas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/button_gestion_citas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestión de Citas"
                android:textSize="14sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Segunda fila - Historial y comunicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/button_historial_clinico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Historial Clínico"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="16dp"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/button_comunicacion_seguimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💬 Mensajes"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="16dp"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <!-- SECCIÓN: PRESCRIPCIÓN Y RESULTADOS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prescripción y Resultados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="8dp" />

        <!-- Tercera fila - Prescripción y resultados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/button_prescripcion_ordenes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prescripción"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="16dp"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/button_revision_resultados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resultados"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:padding="16dp"
                android:layout_marginStart="6dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Botón Volver -->
    <Button
        android:id="@+id/button_volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_cerrar_sesion_background"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_margin="16dp" />

</LinearLayout> 