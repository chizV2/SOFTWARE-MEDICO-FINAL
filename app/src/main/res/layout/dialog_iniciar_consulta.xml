<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Nueva Consulta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Campo Paciente -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paciente:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_paciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccionar paciente"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:focusable="false"
        android:clickable="true" />

    <!-- Campo Especialidad -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialidad:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_especialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Campo Motivo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivo de la Consulta:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_motivo_iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describir motivo de la consulta"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Campo Síntomas -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Síntomas:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_text_sintomas_iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describir síntomas del paciente"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Campo Prioridad -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prioridad:"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_prioridad_iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textSize="16sp"
            android:background="@drawable/button_cerrar_sesion_background"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_iniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout> 