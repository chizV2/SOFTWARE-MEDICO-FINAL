<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre completo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Completo *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: María González"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: maria.gonzalez@email.com"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress" />

        <!-- Teléfono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 300-123-4567"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone" />

        <!-- Dirección -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Calle 123 #45-67"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPostalAddress" />

        <!-- Ciudad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_ciudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Bogotá"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Código Postal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código Postal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_codigo_postal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 110111"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="number" />

        <!-- Fecha de nacimiento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Nacimiento *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_fecha_nacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DD/MM/AAAA (Toca para seleccionar)"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true" />

        <!-- Género -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Género *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Tipo de Documento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Documento *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_tipo_documento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Documento de identidad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Documento *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_documento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 12345678"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="number" />

        <!-- Contacto de Emergencia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacto de Emergencia *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_emergencia_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Juan González (Padre)"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName" />

        <!-- Teléfono de Emergencia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono de Emergencia *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_emergencia_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 300-987-6543"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone" />

        <!-- Seguro médico (solo para pacientes) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguro Médico"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_seguro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: EPS Sanitas"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Número de seguro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Seguro"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edit_text_numero_seguro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: SAN-2024-001"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Nota sobre campos obligatorios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Campos obligatorios"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView> 