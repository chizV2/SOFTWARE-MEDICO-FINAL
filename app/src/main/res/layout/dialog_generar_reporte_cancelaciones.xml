<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="❌ Generar Reporte de Cancelaciones"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Fecha de inicio -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de Inicio *"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_fecha_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej: 08/12/2024"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="date" />

    <!-- Fecha de fin -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de Fin *"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edit_text_fecha_fin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej: 15/12/2024"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="date" />

    <!-- Motivo de cancelación -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivo de Cancelación"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spinner_motivo_cancelacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Opciones adicionales -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opciones del Reporte"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/check_box_tendencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📈 Incluir análisis de tendencias"
        android:textSize="14sp"
        android:checked="true"
        android:layout_marginBottom="16dp" />

    <!-- Información sobre el reporte -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 El reporte incluirá:\n• Total de cancelaciones en el período\n• Motivos más frecuentes\n• Distribución por especialidad\n• Tendencias temporales\n• Recomendaciones para reducir cancelaciones"
        android:textSize="12sp"
        android:textColor="@color/colorTextSecondary"
        android:background="@drawable/info_background"
        android:padding="12dp" />

</LinearLayout> 